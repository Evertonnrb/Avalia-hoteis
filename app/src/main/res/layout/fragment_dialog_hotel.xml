<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragmentDialogHotelScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edtNomeFragmentDialogHotel"
                style="@style/mEditTextForNames"
                android:hint="@string/nome"
                android:imeOptions="actionNext" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edtEnderecoFragmentDialogHotel"
                style="@style/mEditTextForNames"
                android:hint="@string/endereco"
                android:imeOptions="actionDone" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            style="@style/mSimpleTextViewMedium"
            android:layout_gravity="center_vertical"
            android:text="Classificação" />

        <RatingBar
            android:id="@+id/rtbEstrelasFragmentDialogHotel"
            style="@style/mEditTextForNames" />


    </LinearLayout>

</ScrollView>